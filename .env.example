# Database - Product
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/istari_product
APP_DB_URL=postgresql+psycopg://postgres:postgres@localhost:5432/istari_product

# Database - Analytics fallback/external (optional in local compose)
# If no external datasource is configured, API uses this URL as fallback.
ANALYTICS_DB_URL=postgresql://postgres:postgres@localhost:5432/istari_product
# Docker fallback for API container (inside compose network)
ANALYTICS_DB_URL_DOCKER=postgresql://postgres:postgres@app_db:5432/istari_product

# API
API_PORT=8000
API_HOST=0.0.0.0
ENVIRONMENT=development
INSIGHTS_DEV_DEBUG_LOGS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
LOG_EXTERNAL_QUERIES=false
LOG_EXTERNAL_QUERY_PARAMS=false

# JWT
SECRET_KEY=your-super-secret-key-change-in-prod
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Encryption for datasource credentials (must be stable across restarts)
ENCRYPTION_KEY=change-me-with-a-generated-fernet-key
BOOTSTRAP_ADMIN_ENABLED=false
BOOTSTRAP_ADMIN_EMAIL=admin@local
BOOTSTRAP_ADMIN_PASSWORD=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Frontend Build
NEXT_TELEMETRY_DISABLED=1
